<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BActivity">

    <EditText
        android:id="@+id/b_et_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入账号"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/b_et_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="请输入密码"
        app:layout_constraintTop_toBottomOf="@id/b_et_id" />

    <EditText
        android:id="@+id/b_et_pwd2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="请确认密码"
        app:layout_constraintTop_toBottomOf="@id/b_et_pwd" />

    <Button
        android:id="@+id/b_button_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="注册"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/b_et_pwd2" />

    <Button
        android:layout_width="wrap_content"
        android:id="@+id/b_button_return"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="返回携带数据"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/b_et_pwd2" />

</androidx.constraintlayout.widget.ConstraintLayout>